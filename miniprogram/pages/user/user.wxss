.my_container{
  width: 100vw;
  height: 100vh;
  background-color: #fff;
}
.login{
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 4px solid #e5e5e5;
}
.user{
  padding: 40rpx;
  border-bottom: 4px solid #e5e5e5;
  position: relative;
}
.info{
  margin-left: 40rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.tips .title{
  font-size: 26rpx;
  font-weight: bold;
  text-align: left;
  display: block;
  color: #272727;
}
.tips .small{
  font-size: 22rpx;
  margin-top: 20rpx;
  text-align: left;
  display: block;
  color: #797979;
}
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user_avatar{
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto;
}
.name{
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin: 0 auto;
  text-align: center;
  margin-top: 10rpx;
}
.vip{
  width: 40rpx;
  position: absolute;
  left: 57%;
  top: 10%;
}
.navs{
  padding: 40rpx;
}
.nav_item{
  color: #272727;
  font-size: 26rpx;
  line-height: 80rpx;
  border-bottom: 2px solid #f6f6f6;
  position: relative;
  margin: 20rpx 0;
}
.nav_item text{
  margin-left: 100rpx;
}
.item_img{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: calc( 50% - 30rpx);
}
.arrow{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: calc( 50% - 30rpx);
  right: 20rpx;
}
.greetings{
  font-size: 28rpx;
  color: #333;
  display: block;
  margin: 0 auto;
  text-align: center;
  margin-top: 10rpx;
}